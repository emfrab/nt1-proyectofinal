@model ProyectoHotelNT1.Models.Habitaciones

@{
    ViewData["Title"] = "Editar";
}

@if (ViewBag.habitacionExiste != null)
{
    <script>
        @Html.Raw(ViewBag.habitacionExiste)
    </script>
}

<h2>Editar</h2>

<h4>Habitacion <b>Nro. @Html.DisplayFor(model => model.NumHabitacion)</b></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NumHabitacion" class="control-label">Nro. habitacion</label>
                <input asp-for="NumHabitacion" class="form-control" />
                <span asp-validation-for="NumHabitacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrecioPorDia" class="control-label">Precio por dia</label>
                <input asp-for="PrecioPorDia" class="form-control" />
                <span asp-validation-for="PrecioPorDia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CapacidadMax" class="control-label">Capacidad max.</label>
                <input asp-for="CapacidadMax" class="form-control" />
                <span asp-validation-for="CapacidadMax" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
